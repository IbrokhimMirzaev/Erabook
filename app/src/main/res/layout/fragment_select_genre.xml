<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:paddingVertical="35dp"
    tools:context=".fragments.SelectGenreFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pop_600"
        android:text="Choose the Book Genre You Like"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pop_400"
        android:text="Select your preferred book genre for better content, or you can skip it."
        android:textColor="@color/black"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/romance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Romance"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fantasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Action"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/scientific"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Scientific"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/comedy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Comedy"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/thriller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Thriller"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Adventure"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/childrens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Children's"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Biography"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pop_500"
                android:text="Travel"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textColor="@color/mainColor"
                android:backgroundTint="@color/white"
                android:textSize="14sp"
                app:strokeColor="@color/mainColor"
                app:strokeWidth="2dp"
                app:cornerRadius="100dp" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pop_500"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="100dp" />

</LinearLayout>